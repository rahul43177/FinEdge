{
  "name": "finedge",
  "version": "1.0.0",
  "description": "Finance app for optimised spending and expenditure",
  "homepage": "https://github.com/rahul43177/FinEdge#readme",
  "bugs": {
    "url": "https://github.com/rahul43177/FinEdge/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rahul43177/FinEdge.git"
  },
  "license": "ISC",
